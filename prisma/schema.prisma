generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  STAKEHOLDER
}

enum TaskStatus {
  DRAFT
  READY
  IN_PROGRESS
  BLOCKED
  PASSED
  FAILED
  DEPLOYED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum ActivityType {
  TASK_ASSIGNED
  STATUS_CHANGED
  COMMENT_ADDED
  SIGNED_OFF
  DEPLOYED
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String
  role         UserRole
  countryCode  String?
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  assignedTasks Task[]   @relation("TaskAssignee")
  updatedTasks  Task[]   @relation("TaskUpdatedBy")
  signedOffTasks Task[]  @relation("TaskSignedOffBy")
  activities     Activity[] @relation("ActivityActor")
  activityReads  ActivityRead[]
  commentReads   CommentRead[]
  comments      Comment[]
}

model Country {
  code      String   @id
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]
  notificationConfig NotificationConfig?
}

model Module {
  id        String   @id @default(cuid())
  name      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String?
  jiraTicket  String?
  crNumber    String?
  developer   String?
  status      TaskStatus
  priority    TaskPriority
  countryCode String
  module      String
  assigneeId  String?
  dueDate     DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  updatedById String?
  signedOffAt DateTime?
  signedOffById String?

  country    Country @relation(fields: [countryCode], references: [code])
  assignee   User?   @relation("TaskAssignee", fields: [assigneeId], references: [id])
  updatedBy  User?   @relation("TaskUpdatedBy", fields: [updatedById], references: [id])
  signedOffBy User?  @relation("TaskSignedOffBy", fields: [signedOffById], references: [id])
  comments   Comment[]
  steps      TaskStep[]
  activities Activity[]
}

model Comment {
  id        String   @id @default(cuid())
  taskId    String
  authorId  String
  body      String
  stepOrder Int?
  createdAt DateTime @default(now())

  task   Task @relation(fields: [taskId], references: [id])
  author User @relation(fields: [authorId], references: [id])
  reads  CommentRead[]
}

model CommentRead {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  readAt    DateTime @default(now())

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId])
  @@index([userId, readAt])
}

model TaskStep {
  id             String   @id @default(cuid())
  taskId         String
  order          Int
  description    String
  expectedResult String
  testData       String?
  actualResult   String?
  isPassed       Boolean?
  attachments    Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  task Task @relation(fields: [taskId], references: [id])

  @@index([taskId, order])
}

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  message     String
  taskId      String?
  actorId     String?
  countryCode String?
  createdAt   DateTime     @default(now())

  task      Task?          @relation(fields: [taskId], references: [id])
  actor     User?          @relation("ActivityActor", fields: [actorId], references: [id])
  reads     ActivityRead[]

  @@index([createdAt])
  @@index([countryCode])
}

model ActivityRead {
  id         String   @id @default(cuid())
  activityId String
  userId     String
  readAt     DateTime @default(now())

  activity Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([activityId, userId])
  @@index([userId, readAt])
}

model NotificationConfig {
  id                 String   @id @default(cuid())
  countryCode        String   @unique
  teamsWebhookUrl    String?
  isActive           Boolean  @default(false)
  notifyTaskAssigned Boolean  @default(true)
  notifyReminder     Boolean  @default(true)
  notifySignedOff    Boolean  @default(true)
  notifyFailedStep   Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  country Country @relation(fields: [countryCode], references: [code], onDelete: Cascade)
}
